extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product-title #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2018/01/17/18/43/book-3088775_1280.jpg", alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very intersting book about so many even more interesting things! 
                        .card_actions
                            button.btn Add to Cart 
        else 
            h1 No Products
                            


